# Core server
PORT=5001

# Database (example)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASS=postgres
DB_NAME=lokali

# JWT / Auth (example)
JWT_SECRET=change_me

# Kobo REST webhook shared secret
KOBO_WEBHOOK_SECRET=change_me_to_a_long_random_string

# SMTP configuration for emails
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
# Optional: force TLS/STARTTLS and choose auth method
SMTP_REQUIRE_TLS=false
# One of: PLAIN | LOGIN | CRAM-MD5
SMTP_AUTH_METHOD=

MAIL_FROM_NAME=Lokali
MAIL_FROM_ADDRESS=no-reply@lokali.local
MAIL_REPLY_TO=
MAIL_BRAND_NAME=Lokali
MAIL_ACTION_URL=http://localhost:3001/dashboard
MAIL_UNSUBSCRIBE_URL=http://localhost:3001/profile#notifications
MAIL_UNSUBSCRIBE_EMAIL=
MAIL_UNSUBSCRIBE_ONECLICK=false

